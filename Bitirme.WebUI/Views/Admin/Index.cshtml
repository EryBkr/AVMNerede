@{
    ViewBag.Title = "Admin Anasayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i>Admin Paneli</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="info-box brown-bg">
            <i class="fa fa-shopping-cart"></i>
            <div class="count">@TempData["AVMSayisi"]</div>
            <div class="title">AVM Sayısı</div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="info-box dark-bg">
            <i class="fas fa-city"></i>
            <div class="count">@TempData["SehirSayisi"]</div>
            <div class="title">Şehir Sayısı</div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="info-box green-bg">
            <i class="fas fa-shopping-bag"></i>
            <div class="count">@TempData["MarkaSayisi"]</div>
            <div class="title">Marka Sayısı</div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

</div>


