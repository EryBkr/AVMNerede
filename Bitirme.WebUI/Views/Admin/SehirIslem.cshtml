@model IEnumerable<Bitirme.Data.DTO.DTOSehir>
@{
    ViewBag.Title = "SehirIslem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        @if (ViewBag.Ekleme == "true")
        {
            <div class="alert alert-success" role="alert">
                Ekleme İşlemi Başarılı
            </div>
        }
        @if (ViewBag.Silme == "true")
        {
            <div class="alert alert-success" role="alert">
                Silme İşlemi Başarılı
            </div>
        }
        @if (ViewBag.Duzenleme == "true")
        {
            <div class="alert alert-success" role="alert">
                Duzenleme İşlemi Başarılı
            </div>
        }

        <a href="/Admin/SehirEkle" class="btn btn-success btn-sm">Ekle</a>
        <table class="table table-hover table-dark table-striped">
            <thead>
                <tr>

                    <th scope="col">Şehir Adı</th>
                    <th scope="col">Şehirdeki AVM Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Ad</td>
                        <td>@item.AVMCount</td>
                        <td>
                            <a href="/Admin/SehirDuzenle/@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a href="/Admin/SehirSil/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


