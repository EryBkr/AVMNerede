@model Bitirme.Data.DTO.DTOAVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AVM Detay Sayfası</title>

    <!-- Bootstrap -->
    <link href="~/UIContent/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/UIContent/css/animate.css">
    <link rel="stylesheet" href="~/UIContent/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/UIContent/css/jquery.bxslider.css">
    <link rel="stylesheet" type="text/css" href="~/UIContent/css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="~/UIContent/css/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/UIContent/css/set1.css" />
    <link href="~/UIContent/css/overwrite.css" rel="stylesheet">
    <link href="~/UIContent/css/style.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse.collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><span>@Model.Ad</span></a>
            </div>
            <div class="navbar-collapse collapse">
                <div class="menu">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="/Home/Index">Harita</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>


    <div class="container">
        <div class="row">
            <div class="slider">
                <div class="img-responsive">
                    <ul class="bxslider">
                        @foreach (var item in Model.Resim)
                        {
                            <li><img class="img-fluid" style="width:1124px;height:520px;" src="~/UploadImages/@item.Ad" alt="" /></li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="text-center">
                    <h2>Mağazalar</h2>
                    <p>
                        Mağaza Listesi
                    </p>
                </div>
                <hr>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="grid">
            @foreach (var item in ((List<Bitirme.Data.DTO.DTOMarka>)TempData["marka"]))
            {
                foreach (var resim in item.Resim)
                {
                    <figure class="effect-zoe">
                        <img class="img-fluid" style="width:100%;height:300px;" src="~/UploadImages/@resim.Ad" />
                        <figcaption>
                            <h2><b>@item.Ad</b>	&nbsp;<small> @item.Telefon</small></h2>
                            <p class="icon-links">
                                <a href="#"><span class="icon-heart"></span></a>
                                <a href="#"><span class="icon-eye"></span></a>
                                <a href="#"><span class="icon-paper-clip"></span></a>
                            </p>
                            <p class="description">@item.Ad</p>
                        </figcaption>
                    </figure>
                }
            }
        </div>
    </div>



    <footer>
        <div class="inner-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 f-contact" style="text-align: center;">
                        <h3 class="widgetheading">Detay Bilgileri</h3>
                        <a href="#">
                            <p><i class="fa fa-envelope"></i> @(Model.Ad+"@gmail.com")</p>
                        </a>
                        <p><i class="fa fa-phone"></i> @Model.Telefon</p>
                        <p><i class="fa fa-home"></i> @Model.Adres<br> @Model.Sehir.Ad</p>
                    </div>
                </div>
            </div>
        </div>


        <div class="last-div">
            <div class="container">
                <div class="row">
                    <div class="copyright">
                        &copy; By Eray Bakır.

                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <ul class="social-network">
                        <li><a href="#" data-placement="top" title="Facebook"><i class="fa fa-facebook fa-1x"></i></a></li>
                        <li><a href="#" data-placement="top" title="Twitter"><i class="fa fa-twitter fa-1x"></i></a></li>
                        <li><a href="#" data-placement="top" title="Linkedin"><i class="fa fa-linkedin fa-1x"></i></a></li>
                        <li><a href="#" data-placement="top" title="Pinterest"><i class="fa fa-pinterest fa-1x"></i></a></li>
                        <li><a href="#" data-placement="top" title="Google plus"><i class="fa fa-google-plus fa-1x"></i></a></li>
                    </ul>
                </div>
            </div>

            <a href="" class="scrollup"><i class="fa fa-chevron-up"></i></a>


        </div>
    </footer>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/UIContent/js/jquery-2.1.1.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/UIContent/js/bootstrap.min.js"></script>
    <script src="~/UIContent/js/wow.min.js"></script>
    <script src="~/UIContent/js/jquery.easing.1.3.js"></script>
    <script src="~/UIContent/js/jquery.isotope.min.js"></script>
    <script src="~/UIContent/js/jquery.bxslider.min.js"></script>
    <script type="text/javascript" src="~/UIContent/js/fliplightbox.min.js"></script>
    <script src="~/UIContent/js/functions.js"></script>
    <script type="text/javascript">
        $('.portfolio').flipLightBox()
    </script>

</body>

</html>

